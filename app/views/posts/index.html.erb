        <td> <%= post.description %></td>
        <td> <%= post.user.email %> </td>
        <td> <%= post.updated_at %> </td>
        <td>
          <%= post.votes.count %>
        </td>
        <td>
          <%= link_to("vote for it!!!", upvote_post_path(post), method: :post, class: "btn btn-info") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>





