<font color="#BFBFBF">

  <h1>问Xdite大神，挖Ruby宝藏</h1>


<% if is_actived_user? %>
  <%= link_to("你想问她什么？", new_post_path, class: "btn btn-danger btn-lg pull-right") %>
<% else %>
 <%= link_to("你想问她什么?", about_index_path, class: "btn btn-danger btn-lg pull-right", data: {confirm: "请注册并找管理员激活"}) %>
<% end %>

<br><br><br><hr>

<table class="table">
  <thead>
    <tr>
      <th> # </th>
      <th> title </th>
      <th> description </th>
      <th> creator </th>
      <th> updated_at </th>
      <th>
        count votes
      </th>
      <th> options </th>

    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td> <%= post.id %></td>
        <td> <%= link_to(post.title, post, class: "btn btn-lg btn-danger") %> </td>
        <td> <%= post.description %></td>
        <td> <%= post.user.email %> </td>
        <td> <%= post.updated_at %> </td>
        <td>
            <i class="fa fa-diamond" aria-hidden="true" style="color: red;"></i> x <%= post.total_rubies %>
        </td>
        <td> <%= link_to("顶这个问题！", upvote_post_path(post), method: :post, class: "btn btn-danger") %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <% @posts.each do |post| %>
  <div class="col-xs-6 col-md-4 post thumbnail" style="height: 200px;">
    <%= link_to post do %><%= post.votes.count %>
      <h3>
        <%= post.title %>
      </h3>
      <hr>
      <p>
        创建者： <%= post.user.email %>
      </p>
      <p>
        <%= post.description %>
      </p>
      <%= link_to("顶这个问题！", upvote_post_path(post), method: :post, class: "btn btn-info") %>
    <% end %>
  </div>
  <% end %>
</div>

