<font color="#BFBFBF">
	<h1>Ruby Rush!</h1>

<%= link_to("New Question?", new_post_path, class: "btn btn-danger btn-lg pull-right") %>

<br><br><br><hr>



<table class="table table-bordered">
  <thead>
    <tr>
      <th> # </th>
      <th> title </th>
      <th> description </th>
      <th> creator </th>
      <th> updated_at </th>
      <th> options </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td> <%= post.id %></td>
        <td> <%= link_to(post.title, post) %> </td>
        <td> <%= post.description %></td>
        <td> <%= post.user.email %> </td>
        <td> <%= post.updated_at %> </td>
        <td>
          <%= post.votes.count %>
        </td>
        <td>
          <%= link_to("vote for it!!!", upvote_post_path(post), method: :post, class: "btn btn-info") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</font>
