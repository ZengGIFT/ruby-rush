<!DOCTYPE html>
<html>
  <head>
    <title>Rubyrush</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <%= render 'common/navbar' %>
      <%= render 'common/flashes' %>

      <div class="row">

          <div class="col-md-2">
            <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
              <li class="active"><%= link_to("Ruby Rush!", posts_path ) %> </li>
              <li class="active"><%= link_to("LeaderBoard!", posts_path ) %> </li>
              <hr>
              <li class="active"><%= link_to("Dig Ruby!", digruby_index_path ) %> </li>
              <li class="active"><%= link_to("Equipment Store!", posts_path ) %> </li>
              <hr>
              <li class="active"><%= link_to("About us!", posts_path ) %> </li>
              <% if current_user && current_user.is_admin%>
                <li class="active"><%= link_to("AdminPainel!", admin_users_path ) %> </li>
              <% end %>

            </ul>
          </div>

          <div class="col-md-10">
            <%= yield %>
          </div>

        </div>

      </div>
      <!-- ./container-fluid -->
    <%= render 'common/footer' %>
  </body>
</html>
